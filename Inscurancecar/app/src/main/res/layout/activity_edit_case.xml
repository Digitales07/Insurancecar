<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.adiljutt.inscurancecar.EditCaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<LinearLayout-->
        <!--android:layout_marginTop="20sp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal">-->



        <TextView
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_gravity="right"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:id="@+id/auto_cuurent_date"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Slect Case Date"
            android:layout_marginRight="10sp"
            android:padding="5sp"/>


        <!--</LinearLayout>-->

        <TextView
            android:textStyle="bold|italic"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:hint=" Customer Info."
            android:padding="5sp"/>


        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/owner_name"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Owner Name"
            android:inputType="textPersonName"
             />

        <EditText
            android:layout_marginTop="5sp"
            android:layout_marginRight="10sp"
            android:id="@+id/father_name"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Father Name"
            android:inputType="textPersonName"
            android:background="@drawable/shape"
            android:padding="10sp" />

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/cnic"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CNIC Number (Without Dashes)"
            android:inputType="number"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"/>

        <TextView
            android:textStyle="bold|italic"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:hint=" Car Info."
            android:padding="5sp"/>

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/workshop_name"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WorkShop Name"
            android:inputType="textPersonName"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/car_company"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Make Company Name"
            android:inputType="textPersonName"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/model"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Model"
            android:inputType="number"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/car_number"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car Number"
            android:inputType="text"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/engine_number"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Engine Number"
            android:inputType="number"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"/>

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/chasis_number"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chassis Number"
            android:inputType="number"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/branch"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Branch"
            android:inputType="textPersonName"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/sum_insured"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sum Insured"
            android:inputType="number"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/premium"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Premium"
            android:inputType="text"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"/>

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/detuctable"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Detuctable"
            android:inputType="number"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/reinspection"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ReInspection"
            android:inputType="text"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/remark"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Remarks"
            android:inputType="text"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/loses_dates"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Previous Losses Lodgement Dates"
            android:inputType="text"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />

        <TextView
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:layout_gravity="right"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:id="@+id/custom_lose_date"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:hint="Select Lose Date"
            android:padding="5sp"/>

        <TextView
            android:visibility="gone"
            android:layout_marginTop="10sp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:hint=" Images Info."
            android:padding="5sp"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_weight="5"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:hint="Before Images."
                    android:padding="5sp"/>

                <LinearLayout
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/before_img_one"
                        android:src="@drawable/img_box"
                        android:layout_weight="5"
                        android:layout_width="0sp"
                        android:layout_height="80sp"
                        />

                    <ImageView
                        android:id="@+id/before_img_two"
                        android:src="@drawable/img_box"
                        android:layout_weight="5"
                        android:layout_width="0sp"
                        android:layout_height="80sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/before_img_three"
                        android:src="@drawable/img_box"
                        android:layout_weight="5"
                        android:layout_width="0sp"
                        android:layout_height="80sp"
                        />

                    <ImageView
                        android:id="@+id/before_img_four"
                        android:src="@drawable/img_box"
                        android:layout_weight="5"
                        android:layout_width="0sp"
                        android:layout_height="80sp"
                        />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <TextView
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:hint="After Images."
                    android:padding="5sp"/>

                <LinearLayout
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/after_img_one"
                        android:src="@drawable/img_box"
                        android:layout_weight="5"
                        android:layout_width="0sp"
                        android:layout_height="80sp"
                        />

                    <ImageView
                        android:id="@+id/after_img_two"
                        android:src="@drawable/img_box"
                        android:layout_weight="5"
                        android:layout_width="0sp"
                        android:layout_height="80sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/after_img_three"
                        android:src="@drawable/img_box"
                        android:layout_weight="5"
                        android:layout_width="0sp"
                        android:layout_height="80sp"
                        />

                    <ImageView
                        android:id="@+id/after_img_four"
                        android:src="@drawable/img_box"
                        android:layout_weight="5"
                        android:layout_width="0sp"
                        android:layout_height="80sp"
                        />


                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

        <TextView
            android:textStyle="bold|italic"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:hint=" Amount Info."
            android:padding="5sp"/>

        <EditText
            android:layout_marginRight="10sp"
            android:id="@+id/previous_amount_detail"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Previous Losses Amount Detail"
            android:inputType="number"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/asking_amount"
                android:layout_marginLeft="10sp"
                android:layout_weight="5"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:hint="Asking Amount"
                android:inputType="number"
                android:background="@drawable/shape"
                android:padding="10sp"
                android:layout_marginTop="5sp" />

            <EditText
                android:id="@+id/settle_amount"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_weight="5"
                android:layout_width="0sp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:hint="Settle Amount"
                android:background="@drawable/shape"
                android:padding="10sp"
                android:layout_marginTop="5sp" />


        </LinearLayout>


        <EditText

            android:id="@+id/tax"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Tax Percentage"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />


        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_width="0sp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:hint="Total Amount"
                android:padding="5sp"/>

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_width="0sp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:hint="::"
                android:padding="5sp"/>

            <TextView
                android:gravity="center"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:id="@+id/total_amount"
                android:layout_width="0sp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:hint="Slect Date"
                android:padding="5sp"/>


        </LinearLayout>

        <TextView
            android:textStyle="bold|italic"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:hint=" Insurrance History Info."
            android:padding="5sp"/>

        <EditText
            android:id="@+id/insurance_id"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insurance Id"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp" />


        <EditText
            android:id="@+id/insurance_history_amount"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:hint="Amount"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"/>

        <TextView
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:layout_gravity="right"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:id="@+id/custom_date"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:hint="Select Insurance Date"
            android:padding="5sp"/>

        <LinearLayout
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginTop="20sp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/add_case"
                android:layout_width="0sp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:text="Cancel"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="20sp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/add_part"
                android:layout_width="0sp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="update"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>
