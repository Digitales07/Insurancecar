<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.adiljutt.inscurancecar.FullReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Select Date"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"/>

        <EditText
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/report"
            android:textSize="15sp"
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:hint="Enter Report Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/ntn"
            android:textSize="15sp"
            android:hint="Enter NTN Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_btn_bg_color"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Insurance Info."
            android:textSize="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/insurer"
            android:textSize="15sp"
            android:hint="Enter Insurer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />




        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/insured"
            android:textSize="15sp"
            android:hint="Enter Insured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/policy"
            android:textSize="15sp"
            android:hint="Enter Policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/loss"
            android:textSize="15sp"
            android:hint="Enter Loss No."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/sum_insured"
            android:textSize="15sp"
            android:hint="Enter Sum Insured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/certified"
            android:textSize="15sp"
            android:hint="Enter Certified Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/access"
            android:textSize="15sp"
            android:hint="Enter Excess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/expiry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Select Expiry Date"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"/>

        <View
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_btn_bg_color"/>

        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nomencalture of Vehicle"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"/>


        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/classs"
            android:textSize="15sp"
            android:hint="Enter Class Of Vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/marker"
            android:textSize="15sp"
            android:hint="Enter Marker Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/body"
            android:textSize="15sp"
            android:hint="Enter Type Of Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/register"
            android:textSize="15sp"
            android:hint="Enter Register Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/chassic"
            android:textSize="15sp"
            android:hint="Enter Chassis Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/model"
            android:textSize="15sp"
            android:hint="Enter Model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/engine"
            android:textSize="15sp"
            android:hint="Enter Engine Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/power"
            android:textSize="15sp"
            android:hint="Enter Horse Power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/color"
            android:textSize="15sp"
            android:hint="Enter Color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/odometer"
            android:textSize="15sp"
            android:hint="Enter Odometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <View
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_btn_bg_color"/>

        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Particular of Drivers"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/name_driver"
            android:textSize="15sp"
            android:hint="Enter Name Of Driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/driver_age"
            android:textSize="15sp"
            android:hint="Enter Driver Age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/driver_licence_no"
            android:textSize="15sp"
            android:hint="Enter Driver Licence Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/driver_location"
            android:textSize="15sp"
            android:hint="Enter Driver Licence Issue Place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_marginLeft="10sp"
                android:layout_weight="5"
                android:id="@+id/driver_issue_date"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Licence Issue Date"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"/>

            <TextView
                android:layout_weight="5"
                android:id="@+id/driver_expiry_date"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Licence Expiry Date"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"/>

        </LinearLayout>

        <View
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_btn_bg_color"/>


        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Date(s) of :"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"/>


        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_marginLeft="10sp"
                android:layout_weight="3"
                android:id="@+id/accident_date"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Accident Date"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"/>

            <TextView
                android:layout_weight="3"
                android:id="@+id/request_date"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Survey Request Date"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"/>

            <TextView
                android:layout_weight="3"
                android:id="@+id/done_date"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Survey Done Date"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"/>

        </LinearLayout>

        <View
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_btn_bg_color"/>


        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Places(s) of :"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"/>


        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/accident_place"
            android:textSize="15sp"
            android:hint="Enter Accident Place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/survey_held"
            android:textSize="15sp"
            android:hint="Enter Survey Held"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_btn_bg_color"/>

        <EditText
            android:background="@drawable/shape"
            android:padding="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/circumfence"
            android:textSize="15sp"
            android:hint="Enter Circumstances of Accident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_btn_bg_color"/>

        <Button
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/add_case"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="View" />

               <!--<TextView-->
        <!--android:textAllCaps="true"-->
        <!--android:textStyle="bold"-->
        <!--android:textColor="#000000"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:text="Assessment Lose :"-->
        <!--android:textSize="20sp"-->
        <!--android:layout_marginTop="10sp"-->
        <!--android:layout_marginRight="10sp"/>-->

    </LinearLayout>

</ScrollView>
