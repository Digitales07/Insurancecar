<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.adiljutt.inscurancecar.InvoiceListDetailActivity">


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="8"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:padding="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="10sp"
                android:background="@color/app_header"
                android:text="@string/tahir_rashid_and_company_pvt_limited"
                android:textAllCaps="true"/>

            <ImageView
                android:src="@drawable/logosssss"
                android:layout_weight="2"
                android:layout_width="0sp"
                android:layout_height="50sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:padding="5sp"
            android:layout_marginLeft="10sp"
            android:text="Insurance Surveyors,Loss Adjusters/Evaluation Consultants or Services Provider\n110,Block B,Green City Housing Scheme,Barki Road,Lahore.\nE-Mail:trc.pk123@gmail.com,Cell#0300-4245329"
            android:textAllCaps="false"/>

        <LinearLayout
            android:padding="5sp"
            android:background="@color/gray_btn_bg_color"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report # "/>

                <TextView
                    android:id="@+id/report"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : "/>

                <TextView
                    android:id="@+id/date"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="InVoice "/>


        <LinearLayout
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To :  "/>

            <TextView
                android:id="@+id/to"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Particular :  "
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/particular"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Particular"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Policy No. :  "
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/policy"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="policy"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOSS No. :  "
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/loss"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="loss"/>

        </LinearLayout>

        <View
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#000000"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>


        <LinearLayout
            android:weightSum="10"
            android:layout_marginStart="120sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="6"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Description "
                android:textAllCaps="true"/>

            <TextView
                android:layout_marginRight="10sp"
                android:layout_weight="4"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text=" Amount"/>

        </LinearLayout>

        <View
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#000000"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>


        <LinearLayout
            android:weightSum="10"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Professional Fee "
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/pofessional_description"
                android:layout_marginRight="10sp"
                android:layout_weight="4"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Description "
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/pofessional_amount"
                android:textSize="12sp"
                android:layout_marginRight="10sp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text=" Amount"/>

        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Re-Inspection Fee "
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/reinspection_description"
                android:layout_marginRight="10sp"
                android:layout_weight="4"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Description "
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/reinspection_fee"
                android:textSize="12sp"
                android:layout_marginRight="10sp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text=" Amount"/>

        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Local Conveyance "
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/local_description"
                android:layout_marginRight="10sp"
                android:layout_weight="4"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Description "
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/local_fee"
                android:textSize="12sp"
                android:layout_marginRight="10sp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text=" Amount"/>

        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="PhotoGraphs "
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/photograph_description"
                android:layout_marginRight="10sp"
                android:layout_weight="4"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Description "
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/photographs_fee"
                android:textSize="12sp"
                android:layout_marginRight="10sp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text=" Amount"/>

        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Miscellaneous "
                android:textAllCaps="true"/>

            <EditText
                android:id="@+id/micelaous_description"
                android:layout_marginRight="10sp"
                android:layout_weight="4"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:hint="Description "
                android:textAllCaps="true"/>

            <EditText
                android:id="@+id/micelaous_fee"
                android:textSize="12sp"
                android:layout_marginRight="10sp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:hint=" Amount"/>

        </LinearLayout>

        <View
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#000000"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>


        <LinearLayout
            android:weightSum="10"
            android:layout_marginStart="120sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="6"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Total Amount :: "
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/grand_total"
                android:layout_marginRight="10sp"
                android:layout_weight="4"
                android:textStyle="bold"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text=" Amount"/>

        </LinearLayout>

        <View
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#000000"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>


        <LinearLayout
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" NTN #  "/>

            <TextView
                android:id="@+id/ntn"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ntn number"/>

        </LinearLayout>

        <TextView
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="right"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" for and on behalf of  "/>

        <TextView
            android:layout_marginBottom="10sp"
            android:layout_marginEnd="10sp"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tahir_rashid_and_company_pvt_limited"
            />



        <LinearLayout
            android:layout_marginBottom="10sp"
            android:weightSum="10"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:visibility="gone"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:background="@color/app_header"
                android:textColor="@color/white"
                android:id="@+id/image"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_weight="5"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text=" Download Image  "/>

            <Button
                android:visibility="visible"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:background="@color/app_header"
                android:textColor="@color/white"
                android:id="@+id/doc"
                android:textStyle="bold"
                android:layout_weight="5"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Word File Download"/>

        </LinearLayout>


    </LinearLayout>


</ScrollView>
